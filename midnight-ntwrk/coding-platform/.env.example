# Midnight Development Platform - Environment Configuration
# Copy this file to .env and customize for your environment

# Container Configuration
IMAGE_NAME=midnight-workstation
IMAGE_TAG=latest
CONTAINER_NAME=midnight-local

# Port Configuration
APP_PORT=3000
PROOF_PORT=8080
CODE_PORT=8443
TERMINAL_PORT=7681

# External Services (optional)
# If PROOF_SERVICE_URL is set, the local mock proof service won't start
# PROOF_SERVICE_URL=https://proof-api.midnight.network
# PROOF_SERVICE_URL=https://your-proof-service.com

# GCP Configuration (for deployment)
# PROJECT_ID=your-gcp-project
# REGION=us-central1
# ZONE=us-central1-a

# Development Environment
MIDNIGHT_ENV=local

# Node.js Configuration
NODE_ENV=development

# OpenCode Configuration
OPENCODE_OPENEDITOR=false
OPENCODE_NOEDITOR=true
EDITOR=nano
BROWSER=none