{
  "name": "@midnight/cli",
  "version": "0.1.0",
  "description": "Midnight development CLI utility",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "midnightctl": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "keywords": [
    "midnight",
    "blockchain",
    "zero-knowledge",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "comments": {
    "sdk": "Midnight SDK 3.x packages built from source. See: make build-sdk",
    "paths": "These file: paths reference /opt/vendor in the container",
    "upgrade": "When SDK 3.x is published to npm, replace file: paths with ^3.0.0 versions"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",

    "@midnight-ntwrk/ledger": "file:/opt/vendor/ledger/ledger-v6",
    "@midnight-ntwrk/onchain-runtime-v1": "file:/opt/vendor/ledger/onchain-runtime-v1",
    
    "@midnight-ntwrk/wallet-sdk-facade": "file:/opt/vendor/wallet/facade",
    "@midnight-ntwrk/wallet-sdk-shielded": "file:/opt/vendor/wallet/shielded-wallet",
    "@midnight-ntwrk/wallet-sdk-unshielded-wallet": "file:/opt/vendor/wallet/unshielded-wallet",
    "@midnight-ntwrk/wallet-sdk-indexer-client": "file:/opt/vendor/wallet/indexer-client",
    "@midnight-ntwrk/wallet-sdk-abstractions": "file:/opt/vendor/wallet/abstractions",
    "@midnight-ntwrk/wallet-sdk-address-format": "file:/opt/vendor/wallet/address-format",
    "@midnight-ntwrk/wallet-sdk-hd": "file:/opt/vendor/wallet/hd",
    "@midnight-ntwrk/wallet-sdk-dust-wallet": "file:/opt/vendor/wallet/dust-wallet",
    "@midnight-ntwrk/wallet-sdk-utilities": "file:/opt/vendor/wallet/utilities",
    "@midnight-ntwrk/wallet-sdk-capabilities": "file:/opt/vendor/wallet/capabilities",
    
    "@midnight-ntwrk/midnight-js-contracts": "file:/opt/vendor/js/contracts",
    "@midnight-ntwrk/midnight-js-types": "file:/opt/vendor/js/types",
    "@midnight-ntwrk/midnight-js-http-client-proof-provider": "file:/opt/vendor/js/http-client-proof-provider",
    "@midnight-ntwrk/midnight-js-indexer-public-data-provider": "file:/opt/vendor/js/indexer-public-data-provider",
    "@midnight-ntwrk/midnight-js-level-private-state-provider": "file:/opt/vendor/js/level-private-state-provider",
    "@midnight-ntwrk/midnight-js-node-zk-config-provider": "file:/opt/vendor/js/node-zk-config-provider",
    "@midnight-ntwrk/midnight-js-network-id": "file:/opt/vendor/js/network-id",
    "@midnight-ntwrk/midnight-js-utils": "file:/opt/vendor/js/utils",
    
    "@midnight-ntwrk/compact-runtime": "file:/opt/vendor/compact-js/compact-js",
    
    "@scure/bip39": "^1.4.0",
    "@scure/base": "^1.1.0",
    
    "rxjs": "^7.8.2",
    "level": "^8.0.0",
    "ws": "^8.18.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "vitest": "^2.0.0"
  }
